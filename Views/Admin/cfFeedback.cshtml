@model List<Feedback>

@{
	Layout = "~/Views/Shared/_DashLayout.cshtml";
}
<div class="container-fluid dashboard-content ">

	<!-- pageheader  -->

	<div class="row">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="page-header">
				<h2 class="pageheader-title">Quản Lý  </h2>
				<div class="page-breadcrumb">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/admin/index" class="breadcrumb-link">Dashboard</a></li>
							<li class="breadcrumb-item active" aria-current="page">confirm feedback</li>
						</ol>
					</nav>
				</div>
			</div>

		</div>
	</div>

	<main role="main">
		@if (Model == null)
		{
			<p>No bills found.</p>
		}
		else
		{

			<div class="card">
				<div class="card-body">
					
					<div class="table-responsive">
						<table class="table mb-0">
							<thead class="table-light">
								<tr>
									<th>Id</th>
									<th>UserName</th>
									<th>Status</th>
									<th>Date</th>
									<th>Title</th>
									<th>Detail</th>
									<th>Delete</th>
									<th>Confirm</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var feedback in Model)
								{
									@*						if (feedback.FeedbackStatus == "0")
							{*@
									<tr>
										<td>
											<div class="d-flex align-items-center">
												<div>
												</div>
												<div class="ms-2">
													<h6 class="mb-0 font-14">@feedback.FeedbackId</h6>
												</div>
											</div>
										</td>
										<td>@feedback.User.Email</td>
										<td>
											@if (feedback.FeedbackStatus == "0")
											{
												<div class="badge rounded-pill text-success bg-light-success p-2 text-uppercase px-3">
													<i class='bx bxs-circle me-1'></i>Unconfimred
												</div>
											}
											@if (feedback.FeedbackStatus == "1")
											{
												<div class="badge rounded-pill text-success bg-light-success p-2 text-uppercase px-3">
													<i class='bx bxs-circle me-1'></i>Confimred
												</div>
											}

										</td>
										<td>@string.Format("{0:dddd, dd MMMM yyyy}", feedback.FeedbackDate)</td>
										<td>@feedback.FeedbackTitle</td>
										<td>@feedback.FeedbackDetail</td>

										<td><a href="/Admin/deleteFb/?feedbackId=@feedback.FeedbackId" type="button" class="btn btn-danger btn-sm radius-30 px-4">Delete</a></td>
										@if (feedback.FeedbackStatus == "0")
										{
											<td><a href="/Admin/confirmFeedback/?feedbackId=@feedback.FeedbackId" type="button" class="btn btn-primary btn-sm radius-30 px-4">Confirm</a></td>
										}
										@if (feedback.FeedbackStatus == "1")
										{
											<td><a  type="button" class="btn btn-success btn-sm radius-30 px-4">Confirmed</a></td>
										}
									</tr>
									
								}

							</tbody>
						</table>


					</div>

				</div>
			</div>

		}
	</main>
	<!-- end pageheader  -->
</div>
